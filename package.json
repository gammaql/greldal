{
    "name": "greldal",
    "version": "0.7.0",
    "description": "A simple micro-framework to expose your relational datastore as a GraphQL API (powered by Node.js).",
    "homepage": "https://gql-dal.github.io/greldal/",
    "bugs": "https://github.com/gql-dal/greldal/issues",
    "main": "lib/index.js",
    "source": "src/index.ts",
    "repository": "https://github.com/gql-dal/greldal",
    "author": "lorefnon <lorefnon@gmail.com> (https://lorefnon.tech)",
    "license": "MIT",
    "private": false,
    "files": [
        "lib"
    ],
    "scripts": {
        "release": "release-it",
        "prebuild": "yarn run clean:lib && yarn run clean:docs",
        "prepublishOnly": "cross-env NODE_ENV=production yarn run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "build:tsc": "tsc",
        "build:docs": "yarn run build:docs:api && yarn run build:docs:site && cp .nojekyll docs",
        "build:docs:api": "node scripts/generate-ts-api-docs.js",
        "build:docs:site": "cross-env NODE_ENV=production node scripts/generate-docs.js",
        "deploy:site": "node scripts/deploy-gh-pages.js",
        "clean:lib": "rimraf lib",
        "clean:docs": "rimraf docs",
        "clean": "yarn run clean:lib && yarn run clean:docs",
        "build": "yarn run build:tsc && yarn run build:docs",
        "deploy": "yarn run deploy:site",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:prod": "yarn run lint && yarn run test -- --no-cache",
        "docs:dev-server": "next src/docs"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "\\.spec\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": false
    },
    "devDependencies": {
        "@types/debug": "^0.0.31",
        "@types/graphql": "^14.0.3",
        "@types/graphql-iso-date": "^3.3.1",
        "@types/inflection": "^1.5.28",
        "@types/jest": "^23.3.10",
        "@types/knex": "^0.15.0",
        "@types/lodash": "^4.14.118",
        "@types/prettier": "^1.15.2",
        "@types/rimraf": "^2.0.2",
        "@types/tmp": "^0.0.33",
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-mdx": "^1.2.0",
        "babel-plugin-styled-components": "^1.10.0",
        "cross-env": "^5.2.0",
        "file-loader": "^3.0.1",
        "gh-pages": "^2.0.1",
        "graphql": "^14.0.2",
        "jest": "^23.6.0",
        "knex": "^0.16.3",
        "next": "^7.0.2",
        "normalize.css": "^8.0.1",
        "prettier": "^1.15.2",
        "qs": "^6.6.0",
        "react": "^16.6.3",
        "react-accessible-accordion": "^2.4.5",
        "react-dom": "^16.6.3",
        "react-syntax-highlighter": "^10.1.2",
        "react-treebeard": "^3.1.0",
        "reflect-metadata": "^0.1.12",
        "release-it": "^9.4.3",
        "remark-autolink-headings": "^5.0.0",
        "remark-emoji": "^2.0.2",
        "remark-highlight.js": "^5.0.0",
        "remark-html": "^9.0.0",
        "remark-html-emoji-image": "^1.0.0",
        "remark-mermaid": "^0.2.0",
        "remark-slug": "^5.1.1",
        "rimraf": "^2.6.2",
        "shelljs": "^0.8.3",
        "sqlite3": "^4.0.3",
        "styled-components": "^4.1.3",
        "tree-climber": "^1.3.0",
        "tree-crawl": "^1.0.5",
        "ts-jest": "^23.10.5",
        "ts-node": "^7.0.1",
        "typedoc": "^0.13.0",
        "typescript": "^3.2.2"
    },
    "dependencies": {
        "core-decorators": "^0.20.0",
        "debug": "^4.1.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-parse-resolve-info": "^4.0.0",
        "graphql-type-uuid": "^0.2.0",
        "inflection": "^1.12.0",
        "io-ts": "^1.5.0",
        "lodash": "^4.17.11",
        "lodash-decorators": "^6.0.0",
        "react-collapsible": "^2.3.2",
        "react-json-tree": "^0.11.1",
        "react-table": "^6.8.6",
        "string": "^3.3.3"
    },
    "peerDependencies": {
        "knex": "^0.15.2"
    }
}

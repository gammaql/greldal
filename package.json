{
    "name": "greldal",
    "version": "0.12.0",
    "description": "A simple micro-framework for exposing your relational datastore as a GraphQL API (powered by Node.js).",
    "homepage": "https://gql-dal.github.io/greldal/",
    "bugs": "https://github.com/gql-dal/greldal/issues",
    "main": "lib/index.js",
    "source": "src/index.ts",
    "repository": "https://github.com/gql-dal/greldal",
    "author": "lorefnon <lorefnon@gmail.com> (https://lorefnon.tech)",
    "license": "MIT",
    "private": false,
    "files": [
        "lib"
    ],
    "keywords": [
        "knex",
        "graphql",
        "database",
        "orm",
        "postgres",
        "pg",
        "postgresql",
        "mysql",
        "sqlite",
        "sqlite3",
        "api",
        "typescript"
    ],
    "scripts": {
        "release": "release-it",
        "prebuild": "yarn run clean:lib && yarn run clean:docs",
        "prepublishOnly": "cross-env NODE_ENV=production yarn run build",
        "format": "prettier --write \"src/**/*.ts\"",
        "build:ts": "tsc",
        "build:docs:snippets": "snippet-collector --files 'src/**/*.ts' --output ./api/snippets.json",
        "build:docs:api": "node scripts/generate-ts-api-docs.js",
        "build:docs:site": "node scripts/generate-docs.js",
        "build:docs": "yarn run build:docs:snippets && yarn run build:docs:api && yarn run build:docs:site && cp .nojekyll docs",
        "check:ts": "yarn run build:ts && yarn run test",
        "deploy:site": "node scripts/deploy-gh-pages.js",
        "clean:lib": "rimraf lib",
        "clean:docs": "rimraf docs",
        "clean": "yarn run clean:lib && yarn run clean:docs",
        "build": "yarn run build:ts && yarn run build:docs",
        "deploy": "yarn run deploy:site",
        "test": "jest",
        "test:watch": "jest --watch",
        "test:prod": "yarn run lint && yarn run test -- --no-cache",
        "docs:dev-server": "next src/docs",
        "docs:dev": "yarn run build:ts && yarn run build:docs:snippets && yarn run build:docs:api && yarn run docs:dev-server"
    },
    "jest": {
        "transform": {
            ".(ts|tsx)": "ts-jest"
        },
        "testEnvironment": "node",
        "testRegex": "\\.spec\\.ts$",
        "moduleFileExtensions": [
            "ts",
            "tsx",
            "js"
        ],
        "coveragePathIgnorePatterns": [
            "/node_modules/",
            "/test/"
        ],
        "coverageThreshold": {
            "global": {
                "branches": 90,
                "functions": 95,
                "lines": 95,
                "statements": 95
            }
        },
        "collectCoverage": false,
        "collectCoverageFrom": [
            "src/*.ts"
        ]
    },
    "devDependencies": {
        "@types/debug": "^4.1.4",
        "@types/jest": "^24.0.15",
        "@types/prettier": "^1.16.4",
        "@types/rimraf": "^2.0.2",
        "@types/tmp": "^0.1.0",
        "@zeit/next-css": "^1.0.1",
        "@zeit/next-mdx": "^1.2.0",
        "babel-plugin-styled-components": "^1.10.6",
        "codemirror": "^5.48.0",
        "codemirror-graphql": "^0.8.3",
        "cross-env": "^5.2.0",
        "dedent": "^0.7.0",
        "file-loader": "^4.0.0",
        "fp-ts": "^2.0.2",
        "generic-pool": "^3.7.1",
        "gh-pages": "^2.0.1",
        "glob": "^7.1.4",
        "graphql": "^14.4.2",
        "io-ts": "^2.0.0",
        "jest": "^24.8.0",
        "json-loader": "^0.5.7",
        "knex": "^0.19.0",
        "marked": "^0.7.0",
        "ndb": "^1.1.3",
        "next": "^9.0.1",
        "normalize.css": "^8.0.1",
        "prettier": "^1.18.2",
        "qs": "^6.7.0",
        "react": "^16.8.6",
        "react-codemirror": "^1.0.0",
        "react-collapsible": "^2.6.0",
        "react-dom": "^16.8.6",
        "react-json-tree": "^0.11.2",
        "react-loadable": "^5.5.0",
        "react-media": "^1.9.2",
        "react-split-pane": "^0.1.87",
        "react-syntax-highlighter": "^11.0.2",
        "react-table": "^6.10.0",
        "react-treebeard": "^3.2.4",
        "reflect-metadata": "^0.1.13",
        "release-it": "^12.3.4",
        "remark-autolink-headings": "^5.2.1",
        "remark-emoji": "^2.0.2",
        "remark-highlight.js": "^5.1.1",
        "remark-html": "^9.0.1",
        "remark-html-emoji-image": "^1.0.0",
        "remark-mermaid": "^0.2.0",
        "remark-slug": "^5.1.2",
        "rimraf": "^2.6.3",
        "shelljs": "^0.8.3",
        "slugify": "^1.3.4",
        "snippet-collector": "^1.0.5",
        "sql.js": "^1.0.0",
        "sqlite3": "^4.0.9",
        "styled-components": "^4.3.2",
        "tree-climber": "^1.3.0",
        "ts-jest": "^24.0.2",
        "ts-node": "^8.3.0",
        "typedoc": "^0.14.2",
        "typescript": "^3.5.3",
        "url-loader": "^2.0.1",
        "yaml-loader": "^0.5.0"
    },
    "dependencies": {
        "@ts-delight/pipe": "^0.1.0",
        "@types/graphql": "^14.2.2",
        "@types/graphql-iso-date": "^3.3.1",
        "@types/inflection": "^1.5.28",
        "@types/lodash": "^4.14.136",
        "core-decorators": "^0.20.0",
        "debug": "^4.1.1",
        "fs-extra": "^8.1.0",
        "graphql-iso-date": "^3.6.1",
        "graphql-parse-resolve-info": "^4.1.0",
        "graphql-subscriptions": "^1.1.0",
        "graphql-type-uuid": "^0.2.0",
        "inflection": "^1.12.0",
        "lodash": "^4.17.14"
    },
    "peerDependencies": {
        "fp-ts": "^2.0.2",
        "graphql": "^14.4.2",
        "io-ts": "^2.0.0",
        "knex": "^0.19.0"
    },
    "resolutions": {
        "**/@types/graphql": "^14.2.0"
    }
}

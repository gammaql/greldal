{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests (PG)",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "args": [
                "--i",
                "--config",
                "jest.config.js"
            ],
            "env": {
                "DB": "pg",
                "DB_CONNECTION_STRING": "postgresql://postgres:postgres@localhost:5432/greldal_test",
                "CI": "false"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests (MySQL)",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "args": [
                "--i",
                "--config",
                "jest.config.js"
            ],
            "env": {
                "DB": "mysql2",
                "DB_CONNECTION_STRING": "mysql://root:password@192.168.99.100:32793/greldal_test",
                "CI": "false"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Debug Tests (SQLite)",
            "program": "${workspaceRoot}/node_modules/jest/bin/jest.js",
            "cwd": "${workspaceRoot}",
            "args": [
                "--i",
                "--config",
                "jest.config.js"
            ],
            "env": {
                "DB": "sqlite3",
                "CI": "false"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceFolder}\\lib\\index.js",
            "preLaunchTask": "tsc: build - tsconfig.json",
            "outFiles": [
                "${workspaceFolder}/lib/**/*.js"
            ],
            "env": {
                "DEBUG": "knex:*"
            }
        }
    ]
}